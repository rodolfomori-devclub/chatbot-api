# Configuração do Servidor
PORT=3001

# Configuração de LLM (Large Language Model)
# Escolha entre 'openai' ou 'groq'
LLM_PROVIDER=openai

# OpenAI Configuration
# Obtenha sua chave em: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Modelo OpenAI (GPT-5 Nano)
# Opções: gpt-5o-nano, gpt-5o-mini, gpt-5o, gpt-4o-mini, gpt-4o, gpt-3.5-turbo
OPENAI_MODEL=gpt-5o-nano

# Groq Configuration (Alternativa)
# Obtenha sua chave em: https://console.groq.com/
GROQ_API_KEY=your_groq_api_key_here

# Modelo Groq
# Opções: llama2-70b-4096, mixtral-8x7b-32768, gemma2-9b-it
GROQ_MODEL=llama2-70b-4096

# Configuração de Idioma
# pt = Português, es = Espanhol, en = Inglês
DEFAULT_LANGUAGE=pt

# Configuração de Segurança
# Tempo limite para requisições da API (em segundos)
API_TIMEOUT=30

# Configuração de Logs
# true = logs detalhados, false = logs básicos
DEBUG_MODE=true
